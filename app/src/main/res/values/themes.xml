<resources>
    <!-- Base application theme. -->
    <style name="Theme.MoneyVerse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_purple500</item>
        <item name="colorPrimaryContainer">@color/color_purple300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="tabStyle">@style/Theme.MoneyVerse.TabLayout</item>
    </style>

    <style name="Theme.MoneyVerse.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MoneyVerse.Fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Tab Layout -->
    <style name="Theme.MoneyVerse.TextAppearance.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/m_plus_rounded_bold</item>
        <item name="android:fontFamily">@font/m_plus_rounded_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.MoneyVerse.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Theme.MoneyVerse.TextAppearance.TabLayout</item>
    </style>
</resources>